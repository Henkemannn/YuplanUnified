  "paths": {
    "/admin/audit": {
      "get": {
        "parameters": [
          {
            "in": "query",
            "name": "tenant_id",
            "schema": {
              "type": "integer"
            }
          },
          {
            "in": "query",
            "name": "event",
            "schema": {
              "type": "string"
            }
          },
          {
            "description": "Inclusive lower bound (RFC3339).",
            "in": "query",
            "name": "from",
            "schema": {
              "format": "date-time",
              "type": "string"
            }
          },
          {
            "description": "Inclusive upper bound (RFC3339).",
            "in": "query",
            "name": "to",
            "schema": {
              "format": "date-time",
              "type": "string"
            }
          },
          {
            "description": "Case-insensitive substring match on payload (stringified).",
            "in": "query",
            "name": "q",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "page",
            "schema": {
              "default": 1,
              "minimum": 1,
              "type": "integer"
            }
          },
          {
            "in": "query",
            "name": "size",
            "schema": {
              "default": 20,
              "maximum": 100,
              "minimum": 1,
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "examples": {
                  "sample": {
                    "value": {
                      "items": [
                        {
                          "actor_role": "admin",
                          "actor_user_id": 10,
                          "event": "limits_upsert",
                          "id": 2,
                          "payload": {
                            "limit_name": "exp",
                            "quota": 9
                          },
                          "request_id": "f3a2b1f8-2e0e-4b12-9f4c-5c28a6a0c3a1",
                          "tenant_id": 5,
                          "ts": "2025-10-05T12:02:00Z"
                        },
                        {
                          "actor_role": "admin",
                          "actor_user_id": 10,
                          "event": "limits_delete",
                          "id": 1,
                          "payload": {
                            "limit_name": "exp"
                          },
                          "request_id": "f3a2b1f8-2e0e-4b12-9f4c-5c28a6a0c3a1",
                          "tenant_id": 5,
                          "ts": "2025-10-05T12:00:00Z"
                        }
                      ],
                      "meta": {
                        "page": 1,
                        "pages": 1,
                        "size": 20,
                        "total": 2
                      },
                      "ok": true
                    }
                  }
                },
                "schema": {
                  "$ref": "#/components/schemas/PageResponse_AuditView"
                }
              }
            },
            "description": "Paged audit events (descending ts)",
            "headers": {
              "X-Request-Id": {
                "$ref": "#/components/headers/X-Request-Id"
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/Error401"
          },
          "403": {
            "$ref": "#/components/responses/Error403"
          }
        },
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "summary": "List audit events (paged, newest first)",
        "tags": [
          "admin"
        ]
      }
    },
